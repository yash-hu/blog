<%- include('partials/header') -%>

<h1>Compose</h1>

<form action="/compose" method="post">

    <div class="form-group">
        <label for="newPostTitle" class="form-label">Title</label>
        <input type="text" name="newPostTitle" class="form-control">
        <label for="newPostBody" class="form-label">Post</label>
        <textarea class="form-control" name="newPostBody" rows="5" ></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Publish</button>
</form>

